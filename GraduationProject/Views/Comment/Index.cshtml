<!-- Index.cshtml - View all comments -->
 @model IEnumerable<Comment>

<h2>Comments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Content</th>
            <th>Created At</th>
            <th>Post</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Content</td>
                <td>@comment.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@comment.Post.Content</td>
                <td>@comment.User.UserName</td>
                <td>
                    <a href="@Url.Action("Details", "Comment", new { id = comment.Id })" class="btn btn-primary">Details</a>
                    <a href="@Url.Action("Edit", "Comment", new { id = comment.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Comment", new { id = comment.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Comment")" class="btn btn-success">Add New Comment</a>

<hr />
