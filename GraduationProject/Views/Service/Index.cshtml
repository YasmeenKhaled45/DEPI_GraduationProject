 @model IEnumerable<Service>

<!-- Display services -->

<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus"></i> Add New Service</a>
            </p>
        }
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Services</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                <span class="text-dark" style="width: 130px;">All Services</span>
                            </a>
                        </li>
                        @foreach (var service in Model){
                        <li class="nav-item">
                                <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#@service.Category.Name">
                                <span class="text-dark" style="width: 130px;">@service.Category.Name</span>
                            </a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                @foreach (var service in Model)
                {
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    <div class="col-md-6 col-lg-4 col-xl-3">
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                                <img src="@service.Image" class="img-fluid w-100 rounded-top" alt="">
                                            </div>
                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@service.Category.Name</div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h4>Service Name</h4>
                                                <p>@service.Description</p>
                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="text-dark fs-5 fw-bold mb-0">@service.Price EGP</p>
                                                    <a asp-controller="Requests" asp-action="Create" asp-route-id="@service.CategoryId" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Request </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->